<div class="question-container">
  <h2><%= @question.title %></h2>
  <div class="question-id"><%= @question.id %></div>
  <div class="question-favorite">
    <% if current_user.favorite_questions.include?(@question) %>
      <i class="fa fa-star fa-3x favorite-toggle" aria-hidden="true"></i>
    <% else %>
      <i class="fa fa-star-o fa-3x favorite-toggle" aria-hidden="true"></i>
    <% end %>
    <span class='favorite-count'><%= @question.favorites.count %></span> favorites
    <%= get_flash %>
  </div>
  <%= @question.reputation %> reputation<br>
  <%= @question.content %><br>
  <% @question.tags.each do |tag| %>
    <%= tag.name %>
  <% end %>
  <br>
  <%= link_to "Edit", edit_question_path %>
  <%= link_to "Delete", question_path, method: :delete %>
  <%= link_to image_tag("upvote.png"), question_upvote_path(@question), method: :post, id: "upvote" %>
  <%= link_to image_tag("downvote.png"), question_downvote_path(@question), method: :post, id: "downvote" %>
  <div class="row">
    <div class="col-md-10 col-md-offset-1">
      <h5>Comments</h5>
      <% @question.comments.each do |comment| %>
        <%= comment.content %> - <%= comment.user.name %>
      <% end %>
    </div>
  </div>
</div>
<h3><span id="answer-count"><%= @question.answers.count %></span> Answers</h3>
<% @question.answers.each do |answer| %>
  <% next if answer.content.nil? %>
  <hr>
  <div id="answer">
    <%= render partial: 'answer', locals: {answer: answer} %>
  </div>
<% end %>
<%= render 'answer_form' %>