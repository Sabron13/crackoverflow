<h2><%= @question.title %></h2>
<p>... has <%= @question.favorites.count %> favorites | <%= link_to "Favorite", {action: :create, controller: :favorites, question_id: @question.id}, method: :post %> | <%= link_to "Undo", {action: :destroy, controller: :favorites, question_id: @question.id}, method: :delete %> <%= get_flash %></p>

<%= @question.reputation %> reputation<br>
<%= @question.content %><br>
<% @question.tags.each do |tag| %>
  <%= tag.name %>
<% end %>
<br>
<%= link_to "Edit", edit_question_path %>
<%= link_to "Delete", question_path, method: :delete %>
<%= link_to image_tag("upvote.png"), question_upvote_path(@question), method: :post %>
<%= link_to image_tag("downvote.png"), question_downvote_path(@question), method: :post %>
<div class="row">
  <div class="col-md-10 col-md-offset-1">
    <h5>Comments</h5>
    <% @question.comments.each do |comment| %>
      <%= comment.content %> - <%= comment.user.name %>
    <% end %>
  </div>
</div>

<h3><%= @question.answers.count %> Answers</h3>
<% @question.answers.each do |answer| %>
  <% next if answer.content.nil? %>
  <hr>
  <%= answer.reputation %> reputation<br>
  <%= answer.content %>
  <div class="row">
    <div class="col-md-10 col-md-offset-1">
      <h5>Comments</h5>
      <% answer.comments.each do |comment| %>
        <%= comment.content %> - <%= comment.user.name %><br>
      <% end %>
      <%= link_to "add comment", {action: :new, controller: :comments, answer_id: answer.id} %> <% get_flash %>
      <br>
    </div>
  </div>
<% end %>

<%= render 'answer_form' %>