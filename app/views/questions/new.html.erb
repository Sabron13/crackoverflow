<%= form_for @question, url: questions_path, as: :question do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %><br>
  <%= f.label :content %>
  <%= f.text_area :content %><br>
  <%= f.label :tags %>
  <%= f.text_field :all_tags, placeholder: "Tags separated with commas" %><br>
  <%= f.submit "Post your question" %>
<% end %>
